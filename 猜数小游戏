int num = 250;

Scanner scan = new Scanner(System.in);
System.out.println("猜吧！");
int guess = scan.nextInt();

while (guess != num){
    if(guess>num){
        System.out.println("猜大了！");
    }else{
        System.out.println("猜小了！");
    }
    System.out.println("猜吧!");
    guess = scan.nextInt();
}
System.out.println("恭喜你，猜对了！");
